<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="buttons_bottom">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button" parent="android:Widget.Material.Light.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <!--        <item name="android:minHeight">36dp</item>-->
        <item name="android:textSize">22px</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <!--        <item name="android:radius">2dp</item>-->
        <item name="android:elevation">1dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="textView3Head">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">serif-monospace</item>
    </style>

    <style name="textInputName">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:padding">10dp</item>
        <item name="android:radius">2dp</item>
    </style>

    <style name="BackgroundStyle" parent="android:Widget.ScrollView">
        <item name="android:background">#e4e4e4</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="i_scrollview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <style name="EditTextComa" parent="@style/textInput">
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ , .</item>
    </style>

    <style name="EditTextAlpha" parent="@style/textInput">
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:typeface">sans</item>
        <item name="android:radius">8dp</item>
        <!--        <item name="android:textDirection">ltr</item>-->

        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="EditTextAlphaNumeric" parent="@style/textInput">
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ
            0123456789
        </item>
    </style>

    <style name="EditTextNum" parent="@style/textInput">
        <item name="android:inputType">number</item>
    </style>

    <style name="EditTextdeci" parent="@style/textInput">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="TestDisabled">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textAppearance">@style/SpinnerItemText</item>
    </style>

    <style name="SpinnerItemText">
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">sans</item>
    </style>

